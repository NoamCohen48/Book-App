<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mynewlibrary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BooksApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_library"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_library"
        android:supportsRtl="false"
        android:theme="@style/Theme.MyNewLibrary.NoActionBar">
        <activity
            android:name=".activities.ShowBookActivity"
            android:exported="true" />
        <activity
            android:name=".activities.AddBookActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/SplashScree">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>